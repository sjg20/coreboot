	default n
	select ARCH_BOOTBLOCK_ARMV8_64
	select ARCH_VERSTAGE_ARMV8_64
	select ARCH_ROMSTAGE_ARMV8_64
	select ARCH_RAMSTAGE_ARMV8_64
	select HAVE_UART_SPECIAL
	select SOC_MEDIATEK_COMMON
	select FLASH_DUAL_IO_READ

