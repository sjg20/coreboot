if BOARD_INTEL_ELKHARTLAKE_CRB

config BOARD_SPECIFIC_OPTIONS
	def_bool y
	select BOARD_ROMSIZE_KB_32768
	select DRIVERS_I2C_HID
	select DRIVERS_INTEL_DPTF
	select DRIVERS_I2C_GENERIC
	select DRIVERS_SPI_ACPI
	select DRIVERS_USB_ACPI
	select EC_ACPI
	select HAVE_SPD_IN_CBFS
	select HAVE_ACPI_RESUME
	select HAVE_ACPI_TABLES
	select INTEL_LPSS_UART_FOR_CONSOLE
	select SOC_INTEL_ELKHARTLAKE

config MAINBOARD_DIR
	default "intel/elkhartlake_crb"

config VARIANT_DIR
	default "ehlcrb" if BOARD_INTEL_ELKHARTLAKE_CRB

config MAINBOARD_PART_NUMBER
	default "ehlcrb"

config MAINBOARD_FAMILY
	string
	default "Intel_ehlcrb"

config DEVICETREE
	default "variants/\$(CONFIG_VARIANT_DIR)/devicetree.cb"

config DIMM_SPD_SIZE
	default 512

config VBOOT
	select GBB_FLAG_DISABLE_EC_SOFTWARE_SYNC
	select GBB_FLAG_DISABLE_FW_ROLLBACK_CHECK
	select GBB_FLAG_DISABLE_FWMP
	select GBB_FLAG_DISABLE_LID_SHUTDOWN
	select GBB_FLAG_DISABLE_PD_SOFTWARE_SYNC
	select GBB_FLAG_ENABLE_ALTERNATE_OS
	select GBB_FLAG_FORCE_DEV_SWITCH_ON
	select VBOOT_ALWAYS_ALLOW_UDC
	select VBOOT_ALWAYS_ENABLE_DISPLAY
	select VBOOT_MOCK_SECDATA if !MAINBOARD_HAS_TPM2
	select VBOOT_NO_BOARD_SUPPORT
	select VBOOT_VBNV_FLASH

config UART_FOR_CONSOLE
	int
	default 2

endif
